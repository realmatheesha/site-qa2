{
  "name": "site-qa",
  "private": true,
  "scripts": {
    "urls": "node scripts/fetch-sitemap.js https://rareskills.io/wp-sitemap.xml > urls.txt",
    "scan": "npx playwright test",
    "scan:sample": "head -n 60 urls.txt > urls.sample.txt && URLS_FILE=urls.sample.txt npx playwright test",
    "links": "npx linkinator https://rareskills.io -r --silent --format json > out/link-report.json"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.9.1",
    "@playwright/test": "^1.45.0",
    "fast-xml-parser": "^4.4.0",
    "linkinator": "^6.1.2",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0"
  }
}